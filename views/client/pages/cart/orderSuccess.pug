extends ../../layouts/default.pug
block main
    .container.my-3
        .row
            .col-12
                h3 Hoa don
                h4 tình trạng: #{order.status}
                h4 tên khách: #{order.userInfo.fullName}
                h4 sdt: #{order.userInfo.phone}
                h4 địa chỉ: #{order.userInfo.address}

        .row 
            .col-12
                table(class="table table-bordered")
                    thead 
                        tr 
                            th STT
                            th Anh 
                            th Ten 
                            th Gia
                            th So luong
                            th Tong tien

                    tbody 
                        if(order.products.length > 0)
                        each item, index in order.products
                            tr 
                                td  #{index + 1}
                                td  
                                    img(src=`${item.productInfo.thumbnail}`, alt="" width="80px")
                                td 
                                   p #{item.productInfo.title}
                                td #{item.priceNew}
                                td 
                                    input(
                                        type="text"
                                        name="quantity"
                                        value=item.quantity
                                        style="width:40px"
                                    )
                                td #{item.totalPrice}

                                
                        else 
                            h3 khong co san pham nao
                            
                h3(class="text-right") Tong don hang: #{order.orderTotalPrice}
                div(class="text-right mt-3")
                    
    
        
