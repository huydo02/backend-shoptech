//- extend ../../layouts/default.pug
include ../mixins/alert.pug

block main
    h1 OTP
    +alert-error(5000)
    +alert-success(5000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Lấy lại mật khẩu
                form(
                    action=`/auth/password/otp`
                    method="post"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            value=email 
                        )
                    div(class="form-group")
                        label(for="otp") nhập mã OTP
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            
                        )
                    
                    div(class="form-group")
                        button(
                            class="btn btn-primary"
                            type="submit"
                        ) xác nhận